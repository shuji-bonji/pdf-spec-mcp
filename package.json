{
  "name": "@shuji-bonji/pdf-spec-mcp",
  "version": "0.2.0",
  "description": "MCP server for structured understanding of ISO 32000 (PDF) specifications",
  "keywords": [
    "mcp",
    "pdf",
    "iso-32000",
    "specification",
    "tagged-pdf"
  ],
  "author": "shuji-bonji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuji-bonji/pdf-spec-mcp.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pdf-spec-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "PDF_SPEC_DIR=./pdf-spec vitest run --config tests/e2e/vitest.config.ts",
    "test:e2e:watch": "PDF_SPEC_DIR=./pdf-spec vitest --config tests/e2e/vitest.config.ts",
    "lint": "eslint src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "pdfjs-dist": "^5.4.624"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.0",
    "prettier": "^3.8.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "bugs": {
    "url": "https://github.com/shuji-bonji/pdf-spec-mcp/issues"
  },
  "homepage": "https://github.com/shuji-bonji/pdf-spec-mcp#readme"
}
